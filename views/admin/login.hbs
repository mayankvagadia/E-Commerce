<!-- Start: Main -->
<div id="main" class="animated fadeIn">
    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">
        <!-- begin canvas animation bg -->
        <!-- Begin: Content -->
        <section id="content">
            <div class="admin-form theme-info" id="login1">
                {{!-- <div class="row mb15 table-layout">
                    <div class="col-xs-12 va-m pln">
                        <a href="javascript::void()" title="" class="logo">
                            <img src="/logo.jpg" height="55" />
                        </a>
                    </div>
                </div> --}}
                {{!-- Start Block for login screen    --}}
                <div class="panel panel-info mt10 br-n {{#if isOtpSent}}hidden{{/if}}" id="loginFormPanel">
                    <!-- end .form-header section -->
                    <form method="post" id="login_form">
                        <div class="panel-body bg-light p30" id="loginMsgBlock">
                            {{#if flash.message}}
                            <div id="alert-demo-2"
                                class="alert {{#compare flash.type 'success' operator="=="}}alert-success{{else}}alert-danger{{/compare}} light alert-dismissable"
                                style="display: block;">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                {{#compare flash.type 'success' operator="=="}}
                                <i class="fa fa-check pr10"></i>
                                {{else}}
                                <i class="fa fa-remove pr10"></i>
                                {{/compare}}
                                {{flash.message}}
                            </div>
                            {{/if}}
                            <div id="loginMsgDiv" class="alert alert-danger light" style="display: none;">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <i class="fa fa-remove pr10"></i>
                                <span id="loginErrMsg"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 pr30">
                                    <div class="section">
                                        <label for="username" class="field-label text-muted fs18 mb10">Username</label>
                                        <label for="username" class="field prepend-icon">
                                            <input type="text" name="username" id="username" class="gui-input"
                                                placeholder="Enter username">
                                            <label for="username" class="field-icon">
                                                <i class="fa fa-user"></i>
                                            </label>
                                        </label>
                                    </div>
                                    <!-- end section -->
                                    <div class="section mbn">
                                        <label for="username" class="field-label text-muted fs18 mb10">Password</label>
                                        <label for="password" class="field prepend-icon">
                                            <input type="password" name="password" id="password" class="gui-input"
                                                placeholder="Enter password">
                                            <label for="password" class="field-icon">
                                                <i class="fa fa-lock"></i>
                                            </label>
                                        </label>
                                    </div>
                                    <span class="help-block mt5 pull-right">
                                        <a href="/admin/forgot_password">Forgot Password?</a>
                                    </span>
                                    <!-- end section -->
                                </div>
                            </div>
                        </div>
                        <!-- end .form-body section -->
                        <div class="panel-footer clearfix p10 ph15">
                            <button type="submit" id="login_btn" class="button btn-primary mr10 pull-right">Sign
                                In</button>
                            <label class="switch ib switch-primary pull-left input-align mt10">
                                <input type="checkbox" name="remember" id="remember">
                                <label for="remember" data-on="YES" data-off="NO"></label>
                                <span>Remember me</span>
                            </label>
                        </div>
                        <!-- end .form-footer section -->
                    </form>
                </div>
                {{!-- End Block for login screen    --}}


                {{!-- Start Block for verify otp screen    --}}
                <div class="panel panel-info mt10 br-n {{#unless isOtpSent}}hidden{{/unless}}" id="verifyOtpPanel">
                    <!-- end .form-header section -->
                    <form action="/admin/verify_otp" method="post" id="verify_otp_form">
                        <div class="panel-body bg-light p30" id="successLoginBlock">
                            <div id="verifyOTPMsgDiv" class="alert alert-success light" style="display: none;">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                <span id="otpMsg"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 pr30">
                                    <div class="section mbn">
                                        <label for="login_otp" class="field-label text-muted fs18 mb10">Please Enter
                                            Security Code</label>
                                        <label for="password" class="field prepend-icon">
                                            <input type="text" name="login_otp" id="login_otp" class="gui-input"
                                                placeholder="Enter Security Code" maxlength="4">
                                            <label for="password" class="field-icon">
                                                <i class="fa fa-key"></i>
                                            </label>
                                        </label>
                                    </div>
                                    <span class="help-block mt5 pull-right">
                                        <a href="javascript:void(0);" id="resendOTPLink">Resend Security Code</a>
                                    </span>
                                    <!-- end section -->
                                </div>
                            </div>
                        </div>
                        <!-- end .form-body section -->
                        <div class="panel-footer clearfix p10 ph15">
                            <button type="submit" id="verify_otp_btn" class="button btn-primary mr10 pull-right">Verify
                                Security Code</button>
                        </div>
                        <!-- end .form-footer section -->
                    </form>
                </div>
                {{!-- End Block for verify otp screen    --}}
            </div>
        </section>
        <!-- End: Content -->
    </section>
    <!-- End: Content-Wrapper -->
</div>
<!-- End: Main -->
{{flash.message}}
